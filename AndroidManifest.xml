<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.azapps.mirakel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:name="de.azapps.mirakel.Mirakel"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.azapps.mirakel.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.azapps.mirakel.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="de.azapps.mirakel.TasksActivity"
            android:label="@string/title_activity_tasks" >
        </activity>
        <activity
            android:name="de.azapps.mirakel.TaskActivity"
            android:label="@string/title_activity_task" >
        </activity>
        <activity
            android:name="de.azapps.mirakel.ListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="de.azapps.mirakel.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="de.azapps.mirakel.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>