<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <View android:background="@android:color/darker_gray" android:id="@+id/item_separator" android:layout_height="1dp" android:layout_marginBottom="@dimen/marginTopDivider" android:layout_marginTop="@dimen/marginTopDivider" android:layout_width="match_parent"/>
  

    
  <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingRight="@dimen/task_padding">
    

        
    <ViewSwitcher android:id="@+id/switcher_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_gravity="start" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/edit_content" android:layout_width="300dp" android:measureAllChildren="false">
      

            
      <TextView android:gravity="center_vertical" android:id="@+id/task_content" android:layout_height="wrap_content" android:layout_width="match_parent" android:minHeight="42dp" android:paddingLeft="@dimen/task_padding" android:paddingRight="@dimen/task_padding" android:textAppearance="?android:attr/textAppearanceMedium"/>
      

            
      <EditText android:gravity="center_vertical" android:id="@+id/task_content_edit" android:inputType="textMultiLine" android:layout_height="wrap_content" android:layout_width="match_parent" android:minHeight="42dp" android:paddingLeft="@dimen/task_padding" android:paddingRight="@dimen/task_padding" android:textAppearance="?android:attr/textAppearanceMedium"/>
      
        
    </ViewSwitcher>
    

        
    <ImageButton android:background="@android:color/transparent" android:contentDescription="@string/edit" android:id="@+id/edit_content" android:layout_alignParentRight="true" android:layout_height="42dp" android:layout_width="42dp" android:paddingRight="-2dp"/>
    
    
  </RelativeLayout>
  


</LinearLayout>
