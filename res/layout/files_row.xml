<LinearLayout android:descendantFocusability="blocksDescendants" android:id="@+id/files_row" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingLeft="@dimen/task_padding" android:paddingRight="@dimen/task_padding" android:paddingTop="7.5dp" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <ImageView android:adjustViewBounds="true" android:id="@+id/file_image" android:layout_height="150dp" android:layout_width="150dp"/>
  

    
  <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
    

        
    <TextView android:ellipsize="end" android:id="@+id/file_name" android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingLeft="@dimen/text_padding" android:textIsSelectable="false" android:textSize="18sp"/>
    

        
    <TextView android:ellipsize="end" android:id="@+id/file_path" android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingLeft="@dimen/text_padding" android:textColor="@color/Grey" android:textIsSelectable="false" android:textSize="12sp"/>
    
    
  </LinearLayout>
  


</LinearLayout>
