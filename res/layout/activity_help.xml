<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    tools:context=".HelpActivity" >

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/help_button_contact"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="contact"
            android:text="@string/help_button_contact" >
        </Button>

        <Button
            android:id="@+id/help_button_donate"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="donate"
            android:text="@string/help_button_donate" >
        </Button>
    </LinearLayout>

    <Button
        android:id="@+id/help_button_ok"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:onClick="ok"
        android:text="@string/help_button_ok" >
    </Button>

</LinearLayout>