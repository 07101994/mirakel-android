<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <header
        android:fragment="de.azapps.mirakel.settings.fragments.UISettingsFragment"
        android:title="@string/ui_settings_title"
        android:id="@+id/ui_settings"
        android:icon="@drawable/settings_ui"/>
    <header
        android:title="@string/sync_title"
        android:id="@+id/sync_settings"
        android:icon="@drawable/settings_sync">
        <intent
            android:targetPackage="de.azapps.mirakelandroid"
            android:targetClass="de.azapps.mirakel.settings.activities.AccountSettingsActivity"/>
    </header>
    <header
        android:fragment="de.azapps.mirakel.settings.fragments.TaskSettingsFragment"
        android:title="@string/settings_tasks_title"
        android:id="@+id/tasks_settings"
        android:icon="@drawable/settings_tasks"/>
    <header
        android:title="@string/special_lists_click"
        android:id="@+id/meta_lists_settings">
        <intent
            android:targetPackage="de.azapps.mirakelandroid"
            android:targetClass="de.azapps.mirakel.settings.special_list.SpecialListListActivity"/>
    </header>
    <header
        android:fragment="de.azapps.mirakel.settings.fragments.NotificationSettingsFragment"
        android:title="@string/notification_title"
        android:id="@+id/notifications_settings"
        android:icon="@drawable/settings_notifications"/>
    <header
        android:fragment="de.azapps.mirakel.settings.fragments.BackupSettingsFragment"
        android:title="@string/settings_backup"
        android:id="@+id/backup_settings"
        android:icon="@drawable/settings_backup"/>
    <header
        android:fragment="de.azapps.mirakel.settings.fragments.DevSettingsFragment"
        android:id="@+id/development_settings"
        android:title="@string/settings_dev"
        android:icon="@drawable/settings_dev"/>
    <header
        android:fragment="de.azapps.mirakel.settings.fragments.AboutSettingsFragment"
        android:title="@string/settings_about"
        android:id="@+id/about_settings"
        android:icon="@drawable/settings_about"/>
    <header
        android:title="@string/title_donations"
        android:id="@+id/donation_settings">
        <intent
            android:targetPackage="de.azapps.mirakelandroid"
            android:targetClass="de.azapps.mirakel.settings.activities.DonationsActivity"/>
    </header>

</preference-headers>